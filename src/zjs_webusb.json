{
    "module": "webusb",
    "description": "Module to advertise as a WebUSB device (only A101 has a USB driver in Zephyr currently)",
    "require": "webusb",
    "depends": ["buffer", "events"],
    "targets": ["arduino_101"],
    "zephyr_conf": {
        "all": [
            "CONFIG_UART_INTERRUPT_DRIVEN=y",
            "CONFIG_UART_LINE_CTRL=y",
            "CONFIG_USB=y",
            "CONFIG_USB_DEVICE_STACK=y"
        ],
        "arduino_101": [
            "CONFIG_USB_DW=y",
            "CONFIG_USB_DEVICE_VID=0x8086",
            "CONFIG_USB_DEVICE_PID=0xF8A1"
        ]
    },
    "zjs_config": [
        "-DBUILD_MODULE_WEBUSB",
        "-I${ZEPHYR_BASE}/samples/subsys/usb/webusb/src",
        "-I${ZEPHYR_BASE}/include/usb",
        "-I${ZEPHYR_BASE}/include/drivers/usb",
        "-I${ZEPHYR_BASE}/subsys/usb/class"],
    "src": [
        "src/zjs_webusb.c",
        "${ZEPHYR_BASE}/samples/subsys/usb/webusb/src/webusb_serial.c"
    ]
}
